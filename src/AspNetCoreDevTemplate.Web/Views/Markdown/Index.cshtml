@model AspNetCoreDevTemplate.Web.Models.NotificationSettings

<!-- init data -->
<script type="text/javascript">
    var settings = @Json.Serialize(Model); // notification settings
</script>
<style type="text/css">

</style>

<form class="h-100 d-flex flex-column" id="notification-poster">
    <div class="form-group  mb-0  ">
        <div class="input-group" v-if="showReceiver">
            <div class="input-group-prepend border-bottom-0">
                <div class="input-group-text border-bottom-0 rounded-0">接收人</div>
            </div>
            <input type="text" class="form-control border-bottom-0 rounded-0" placeholder="请输入">
        </div>
    </div>
    <div class="form-group  mb-0">
        <div class="input-group ">
            <div class="input-group-prepend">
                <div class="input-group-text border-bottom-0 rounded-0">置顶至</div>
            </div>
            <input type="text" class="form-control border-bottom-0 rounded-0" placeholder="选填">
        </div>
    </div>
    <div class="d-flex h-100" id="markdown-editor-container" style="flex:1">
        <div class="editor h-100" style="flex:1"></div>
    </div>
</form>
@section Scripts{
<environment include="Development">
    <script src="~/js/dist/markdown/index.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/dist/markdown/index.min.js"></script>
</environment>
}